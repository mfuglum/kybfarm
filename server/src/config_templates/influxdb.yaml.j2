api_version: 2
ssl: false
host: {{ HOST }}
port: {{ PORT }}
token: "{{ TOKEN }}"
organization: {{ ORG }}
bucket: {{ BUCKET }}

tags:
  source: HA

tags_attributes:
  - friendly_name

default_measurement: units

exclude:
  entities:
    - zone.home
  domains:
    - persistent_notification
    - person

include:
  domains:
    - sensor
    - binary_sensor
